.list_container {
  display: flex;
  flex-direction: column;
  margin-top: 20px; 
  padding-bottom: 10rpx;
  box-sizing: border-box;
  box-shadow: 0 5px 3px rgba(0, 0, 0, .1);
  background: #fff;
}

.top {
  width: 100%;
  height: 80rpx; 
  padding: 10rpx;
  box-sizing: border-box;
}

.top-portrait {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10px;
  vertical-align: middle;
}

.top-date {
  font-size: 16px;
  color: #555;
}

.container-img {
  width: 100%;
  height: 300rpx;
  margin-bottom: 10px;
}

.container-text {
   display: block; 
  padding: 10rpx;
  box-sizing: border-box;
  font-size: 16px;
  line-height: 24px;
  text-indent: 20px;
}

.bottom {
  display: flex;
  flex-direction: row;
  height: 50rpx;
  justify-content: flex-end;
  padding-right: 15px;
  box-sizing: border-box;
}

.bottom-collect {
  width: 150rpx;
}

.bottom image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.bottom text {
  font-size: 14px;
  color: #777;
}