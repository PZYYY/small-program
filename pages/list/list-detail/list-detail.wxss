.top-img {
  width: 100%;
  height: 400rpx;
}

.music {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 115rpx;
  left: 315rpx; 
}

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 0 10px; 
  box-sizing: border-box;
}

.info {
  flex-direction: row; 
  margin: 20rpx 0;
}

.info-portrait {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  border-radius: 50%;
   margin-right: 10rpx; 
}

.info-name {
  font-size: 34rpx;
  color: #333;
}

.info-time {
  margin-left: 50rpx;
  font-size: 28rpx;
  color: #666;  
}

.time {
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #0e3a49;
}

.tittle {
  font-size: 20px;
}

.middle {
  margin-top: 10rpx; 
}

.horizon {
  width: 705rpx;
  height: 1px;
  position: relative;
  top: 50rpx;
  left: 0;
  z-index: -1; 
  background-color: #b2b2b2;
}

.icon {
  text-align: right;
}

.icon image {
  width: 100rpx;
  height: 100rpx;
  margin-left: 40rpx;
  /* border-radius: 50%; */
}

.passage {
  color: #666;
  font-size: 16px;
  line-height: 40px;
  text-indent: 1em;
}