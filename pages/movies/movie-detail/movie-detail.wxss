/* pages/movies/movie-detail/movie-detail.wxss */
.top-img {
  width: 100%;
  height: 300rpx;
  position: relative;
}

.top-text {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 20rpx;
  left: 20rpx;
}

.film-name {
  margin-bottom: 20rpx;
  font-size: 45rpx;
  color: #fff;
}

.film-address-time {
  margin-bottom: 50rpx;
  font-size: 35rpx;
  color: #fff;
}

.film_like-comment {
  color: red;
  font-size: 30rpx;
}

.film_like {
 margin-right: 50rpx;
}

.film-comment {
  color: #666;
  margin-left: 30rpx;
}

.film-img {
  width: 180rpx;
  height: 220rpx;
  position: absolute;
  right: 30rpx;
  top: 150rpx;
}

.middle {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  line-height: 50rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #666;
}

.middle-filmname {
  margin: 20rpx 0;
  font-size: 35rpx;
  color: #000;
}

.line {
  width: 100%;
  height: 1rpx;
  margin: 40rpx 0;
  background: #999;
}

.summary {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
  color: #666;
  font-size: 30rpx;
}

.summary-content {
  margin-top: 30rpx;
  text-indent: 2em;
}

.performer-info {
  padding: 20rpx;
  box-sizing: border-box;
  color: #666;
  font-size: 30rpx;
}