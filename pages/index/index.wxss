/**index.wxss**/
page {
  background: #fbfbfb;
}
.body {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user_portrait {
  width: 200rpx;
  height: 200rpx;
  margin-top: 100rpx;
  border-radius: 50%;
}
.user_text {
  margin-top: 100rpx;
  margin-bottom: 200rpx;
  font-size: 30rpx;
  font-weight: bolder;
}
.user_btn {
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #02405e;
  border-radius: 5px;
  border: 1px solid #02405e;
}